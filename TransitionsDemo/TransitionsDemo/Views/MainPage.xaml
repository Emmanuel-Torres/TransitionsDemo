<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:sharedTransitions="clr-namespace:Plugin.SharedTransitions;assembly=Plugin.SharedTransitions"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TransitionsDemo.Views.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://image.shutterstock.com/image-photo/cat-medical-mask-protective-antiviral-600w-1716771988.jpg"
                   sharedTransitions:Transition.Name="Miau"
                   WidthRequest="150"/>
            <Label Text="A picture of a Miau!"
                HorizontalOptions="Center" />
            <Button Text="Go To Details" Command="{Binding GoToDetails}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>